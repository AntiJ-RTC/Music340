@model Album

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete @Model.Title</h1>

<h3>Are you sure you want to delete this album?</h3>
<div>
    <hr />
    <img src="/images/@Model.ItemImage" style="margin-right: 10px; float: left; width: 300px;" alt="album image">
    <h5 class=" text-primary">@Model.Title</h5>
    <h5>Artist: @Model.Artist</h5>
    <h5>Release Year: @Model.Year</h5>
</div>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
